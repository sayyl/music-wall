<h1>Add a Song</h1>
<hr/>

<% if current_user %>

  <% if @musics && @musics.errors.any? %>
    <div>
      <strong>Sorry, some errors occured with your submission:</strong>
      <ul>
        <% @musics.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <form class="form-horizontal" method="post" action="/music">
    <div class="col-xs-8">
      <label for="song_title">Song Title:</label>
      <input type="text" class="form-control" name="song_title" id="song_title" placeholder="Song Title">
  <!--     <input type="text" name="song_title" value="<%= @musics && @musics.song_title %>"> -->
    </div>

    <div class="col-xs-8">
      <label for="author">Author:</label>
      <input type="text" class="form-control" name="author" id="author" placeholder="Author">
   </div>


    <div class="col-xs-8">
      <label for="url">URL (optional):</label>
      <input type="text" class="form-control" name="url" id="url" placeholder="URL">
    <hr/>
    </div>

    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>

<% else %>
  
  <h3>You must be logged in to add a song</h3><br>
    <p>
      <a class="btn btn-primary" href="/sign_up" role="button">Sign Up</a>
      <a class="btn btn-primary" href="/" role="button">Log In</a>
    </p>

  <form class="form-horizontal" method="post" action="/music">
    <div class="col-xs-8">
      <br>
      <label for="song_title">Song Title:</label>
      <input type="text" class="form-control" name="song_title" id="song_title" placeholder="Song Title" readonly>
  <!--     <input type="text" name="song_title" value="<%= @musics && @musics.song_title %>"> -->
    </div>

    <div class="col-xs-8">
      <br>
      <label for="author">Author:</label>
      <input type="text" class="form-control" name="author" id="author" placeholder="Author" readonly>
   </div>


    <div class="col-xs-8">
      <br>
      <label for="url">URL (optional):</label>
      <input type="text" class="form-control" name="url" id="url" placeholder="URL" readonly>
    <hr/>
    </div>

    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary" disabled="disabled">Submit</button>
    </div>
  </form>

<% end %>

