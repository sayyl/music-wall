 <h1>All Music</h1>

 
<% @musics.each do |music| %>
  <div class="music">
    <h2><%= music.song_title %> <small>(by: <%= music.author %>)</small></h2>
    <p>
      <a href="<%= music.url %>"><%= music.url %></a>
    </p>
  </div>
<% end %>

<% if current_user %>
  <hr/>
  <a href="/music/new">Add a new song to the list!</a>
<% else %>
  <hr/>

  <p>Log in to add your own songs! <br></p>
  <p>
    <a class="btn btn-primary" href="/sign_up" role="button">Sign Up</a>
    <a class="btn btn-primary" href="/" role="button">Log In</a>
  </p>

<% end %>