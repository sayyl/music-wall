<h1>Home Page</h1>


<% if current_user %>

  <a class="btn btn-default" href="/music/new" role="button">Add a new song to the list!</a>
  <a class="btn btn-default" href="/log_out" role="button">Log Out</a>

<% else %>

  <form class="form-horizontal" method="post" action="/log_in">

    <div class="col-xs-8">
      <label for="Email">Email:</label>
      <input type="text" class="form-control" name="email" id="Email" placeholder="Email">
   </div>

    <div class="col-xs-8">
      <label for="Password">Password:</label>
      <input type="text" class="form-control" name="password" id="Password" placeholder="Password">
    </div>
    
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Log In</button>
    </div>

  </form>

<% end %>
